model ProjectFeedback {
  id              String   @id @default(cuid())
  name            String
  profileImg      String   // URL
  projectImgUrl   String   // URL
  userReview      String
  userProjectUrl  String   // URL
  createdAt       DateTime @default(now())
}
model Project {
  id            String   @id @default(cuid())
  name          String
  description   String
  projectImgUrl String
  topic         String
  courseName    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
model model_testimonial {
  id          String   @id @default(uuid())
  name        String
  profileImg  String   @db.Text
  userReview  String   @db.Text
  linkedinUrl String   @db.Text
  starRating  Int
  createdAt   DateTime @default(now())
}
